---
import { Image } from "astro:assets";

import ArrowIcon from "../assets/Arrow.svg?raw";
import Logo from "../assets/logo.svg";
import TAILogo from "../assets/tai-logo.png";

import LinkedinLogo from "../assets/linkedin.svg?raw";
import XLogo from "../assets/x.svg?raw";

interface Props {
  className?: string;
}

const { className } = Astro.props as Props;
---

<footer
  class={`mx-auto grid max-w-7xl px-6 gap-y-20 pb-24 ${className} text-[#5B1D1C]`}
>
  <div
    class="grid justify-items-center gap-y-14 text-center md:grid-cols-[auto_1fr_auto] md:justify-items-start md:text-start"
  >
    <div
      class="flex justify-items-center pb-5 md:pb-0 [&_[fill=white]]:fill-black"
    >
      <Image class="max-h-9 w-fit md:h-fit" src={Logo} alt="TAI Logo" />
      <Image
        class="ml-7 max-h-9 w-fit border-l-2 border-[#090045] pl-7 md:ml-14 md:h-fit md:pl-14"
        src={TAILogo}
        alt="TAI Logo"
      />
    </div>
    <section class="flex max-w-80 flex-col gap-5 md:justify-self-center">
      <h2 class="pb-2 font-semibold uppercase text-[#1672F7]">Contact Us</h2>
      <a href="mailto:jlah@taicollaborative.org">jlah@taicollaborative.org</a>
      <p>1100 13th St NW, Suite 800 Washington, DC 20005, United States</p>
    </section>
    <section class="flex flex-col gap-5 md:justify-self-end">
      <h2 class="pb-2 font-semibold uppercase text-[#1672F7]">
        Links to Related Content
      </h2>
      <a href="#">Privacy Policy</a>
      <a href="#">Terms of Service</a>
      <a href="#">About TAI Collaborative</a>
    </section>
  </div>

  <div class="grid md:grid-cols-5">
    <section
      class="mb-11 grid grid-cols-[1fr_auto_auto] items-center gap-x-4 border-y border-[#090045] py-8 pl-0 md:mb-0 md:grid-cols-4 md:gap-x-0 md:border md:border-l-0 md:py-0"
    >
      <h2
        class="max-w-[10ch] text-pretty text-lg font-semibold text-[#1672F7] md:col-span-2 md:text-base"
      >
        Follow us for more details
      </h2>
      <a href="#"
        ><span class="sr-only">Linkedin</span><Fragment
          set:html={LinkedinLogo}
        /></a
      >
      <a href="#"><span class="sr-only">X</span><Fragment set:html={XLogo} /></a
      >
    </section>
    <section
      class="flex flex-col border-[#090045] md:col-span-4 md:flex-row md:items-center md:border-y md:p-12 md:pr-0"
    >
      <h2 class="mb-4 text-lg font-bold text-[#090045] md:mb-0">
        Keep updated with TAI WEEKLY
      </h2>

      <a
        target="_blank"
        href="https://transparency-initiative.us8.list-manage.com/subscribe?u=3225c2c32fc6c7023ca721588&id=1a5ff28f1e"
        class="group ml-auto flex items-center gap-x-5 rounded-full bg-[#090045] p-1 pl-6 text-white"
      >
        <span> Suscribe here </span>
        <span
          class="rotate-45 text-[#090045] transition-transform group-hover:rotate-0 [&>svg]:size-9 [&>svg]:fill-white"
        >
          <Fragment set:html={ArrowIcon} />
        </span>
      </a>
    </section>
  </div>
</footer>
