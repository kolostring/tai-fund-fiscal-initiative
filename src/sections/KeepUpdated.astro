---
import ArrowIcon from "../assets/Arrow.svg?raw";
import AnimateText from "../components/AnimateText.astro";
---

<section
  class="mx-auto mb-24 flex aspect-[1430/634] max-w-7xl flex-col items-center justify-center rounded-3xl bg-[#1672F7] px-5 py-11 text-white"
>
  <h3
    class="mb-8 text-center text-6xl font-bold leading-tight -tracking-[1%] md:text-8xl"
  >
    <AnimateText
      textList={["Keep updated", "with TAI WEEKLY"]}
      mobileTextList={["Keep updated", "with TAI", "WEEKLY"]}
    />
  </h3>

  <p class="mb-14 max-w-[40ch] text-center">
    Everything you need to know about accountability, inclusive participation
    and trust, delivered to your inbox every Tuesday.
  </p>

  <form
    onsubmit="return false"
    class="relative flex w-full max-w-[425px] items-center rounded-full bg-[#CDF1F3] p-1"
  >
    <label class="w-full rounded-full">
      <span class="sr-only">Your Email</span>
      <input
        type="email"
        class="w-full rounded-full bg-transparent p-3 placeholder:text-[#090045]"
        name="user-email"
        placeholder="Enter your Email"
      />
    </label>
    <button
      class="absolute inset-1 left-auto text-[#CDF1F3] [&_svg]:h-full [&_svg]:w-full [&_svg]:fill-[#090045]"
      type="submit"
    >
      <Fragment set:html={ArrowIcon} />
      <span class="sr-only">Subscribe</span>
    </button>
  </form>
</section>
