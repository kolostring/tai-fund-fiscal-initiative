---
import ArrowIcon from "../assets/Arrow.svg?raw";
import AnimateText from "../components/AnimateText.astro";
---

<section
  class="mx-auto flex aspect-[1430/471] max-w-7xl flex-col items-center justify-center rounded-3xl bg-[#1672F7] text-white"
>
  <h3 class="mb-8 text-center text-6xl font-bold leading-tight -tracking-[1%]">
    <AnimateText
      textList={[
        "Donâ€™t hesitate to reach out to us",
        "and follow TAI on social media.",
      ]}
    />
  </h3>

  <form
    onsubmit="return false"
    class="relative flex w-full max-w-[425px] items-center rounded-full bg-[#CDF1F3] p-1"
  >
    <label class="w-full rounded-full">
      <span class="sr-only">Your Email</span>
      <input
        type="email"
        class="w-full rounded-full bg-transparent p-3 placeholder:text-[#090045]"
        name="user-email"
        placeholder="Enter your Email"
      />
    </label>
    <button
      class="absolute inset-1 left-auto text-[#090045] [&_svg]:h-full [&_svg]:w-full"
      type="submit"
    >
      <Fragment set:html={ArrowIcon} />
      <span class="sr-only">Subscribe</span>
    </button>
  </form>
</section>
