---
import ArrowIcon from "../assets/Arrow.svg?raw";
import AnimateText from "../components/AnimateText.astro";
---

<section
  class="md:mx-auto flex aspect-[1430/471] mx-6 max-w-7xl flex-col items-center justify-center rounded-3xl bg-[#1672F7] px-4 py-12 text-white"
>
  <h3
    class="mb-8 text-center text-4xl font-bold leading-tight -tracking-[1%] md:text-6xl"
  >
    <AnimateText
      textList={[
        "Don’t hesitate to reach out to us",
        "and follow TAI on social media.",
      ]}
      mobileTextList={[
        "Don’t hesitate",
        "to reach out to",
        "us and follow",
        "TAI on social",
        "media.",
      ]}
    />
  </h3>

  <a
    target="_blank"
    href="https://www.linkedin.com/company/trust-accountability-inclusion/"
    class="flex items-center gap-x-5 rounded-full bg-[#090045] p-1 pl-6 text-white"
  >
    <span> Follow Us </span>
    <span class="text-[#090045] [&>svg]:size-9 [&>svg]:fill-white">
      <Fragment set:html={ArrowIcon} />
    </span>
  </a>
</section>
